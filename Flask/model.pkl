import joblib
from sklearn.ensemble import RandomForestClassifier
import pandas as pd

# Sample training data (Replace this with your actual training data)
data = {
    "total_points": [1000, 1200, 1300, 900, 800],
    "rank": [50, 40, 30, 60, 70],
    "reduction": [0.02, 0.04, 0.01, 0.05, 0.06],
    "days_since_last_update": [35, 20, 10, 50, 5],
    "account_age": [100, 200, 150, 250, 300],
    "target": [1, 0, 0, 1, 0]  # 1 means they will permanently lose points
}

df = pd.DataFrame(data)
X = df.drop(columns=["target"])
y = df["target"]

# Train the model
model = RandomForestClassifier(n_estimators=100, random_state=42)
model.fit(X, y)

# Save the model
joblib.dump(model, "model.pkl")

print("Model saved successfully as model.pkl")
